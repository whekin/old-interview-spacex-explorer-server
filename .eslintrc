{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "plugins": [
    "import"
  ],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "linebreak-style": ["error", "unix"],
    "indent": ["error", 2],
    "object-curly-spacing": ["error", "always"],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }]
  }
}